<Window x:Class="ToursApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Background="#4682B4"></Grid>
        <Image Source="/Resources/home_10102571.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Риэлторская контора" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,25,0,0"></TextBlock>
        <Grid Grid.Row="2" Background="#A9A9A9"></Grid>
        <Frame NavigationUIVisibility="Hidden"  ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame"></Frame>
        <Button Content="Назад" Name="BtnBack"  HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom"  Click="BtnBack_Click" Grid.Row="1"/>

    </Grid>
</Window>
